@model Product

@{
	ViewData["Title"] = Model.Name;
}

<div class="container rounded bg-light mt-2 py-3">
	@if(ViewBag.HasManagerRole)
	{
		<div class="row justify-content-center pb-2">
			<div class="p-2">
				<a class="btn btn-warning" asp-action="EditProduct" asp-controller="Manager" asp-route-ProductId="@Model.ProductId">
					<i class="fa fa-edit" aria-hidden="true"></i> Edit
				</a> 
			</div>

			<div class="p-2">
				<form method="POST" asp-action="DeleteProduct" asp-controller="Manager" asp-route-ProductId="@Model.ProductId">
					<button type="submit" class="btn btn-danger">
						<i class="fa fa-trash" aria-hidden="true"></i> Delete
					</button>
				</form>
			</div>

		</div>
	}
	<div class="my-auto">
		<div class="row">
			<div class="col-md text-center">
					<img class="p-1 mx-md-auto" style="width:300px"src="/UploadedPhotos/@Model.PhotoPath" asp-append-version="true" />
			</div>
			<div class="col-md">
				<h2>@Model.Name</h2>
				<p class="h6">@Model.Description</p>
				<br />
				<div class="text-center">
					<p class="h5 text-success">$@Model.Price USD</p>
					<form method="POST" asp-action="AddToCart" asp-controller="Cart" asp-route-ProductId="@Model.ProductId">
						<button type="submit" class="btn btn-primary">
							<i class="fa fa-shopping-cart" aria-hidden="true"></i>  Add to cart
						</button> 
					</form>
				</div>
			</div>		
		</div>
	</div>	
</div>